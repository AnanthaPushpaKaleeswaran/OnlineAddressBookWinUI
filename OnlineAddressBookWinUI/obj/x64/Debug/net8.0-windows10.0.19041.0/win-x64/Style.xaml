<?xml version="1.0" encoding="utf-8" ?>
<!-- Styles.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="using:System">

	<!-- Example: Global TextBox Resources -->
    <Thickness x:Key="TextControlBorderThemeThickness">1</Thickness>
	<Thickness x:Key="TextControlBorderThemeThicknessPointerOver">1</Thickness>
    <Thickness x:Key="TextControlBorderThemeThicknessFocused">1</Thickness>
    <SolidColorBrush x:Key="TextControlBorderBrush" Color="#6e98f5" />
    <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#6e98f5" />
    <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#6e98f5" />
    <SolidColorBrush x:Key="TextControlForeground" Color="Black" />
    <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="Black" />
    <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Black" />
    <SolidColorBrush x:Key="TextControlBackground" Color="White" />
    <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="White" />
    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White" />
    <SolidColorBrush x:Key="PasswordControlForeground" Color="Black" />
    <SolidColorBrush x:Key="PasswordControlForegroundFocused" Color="Black" />
    <System:Double x:Key="TextControlFontSize">18</System:Double>

    <SolidColorBrush x:Key="SubmitButtonBackground" Color="#35772C" />
	<SolidColorBrush x:Key="SubmitButtonForeground" Color="White" />
    <SolidColorBrush x:Key="SubmitButtonBackgroundPointerOver" Color="#3c8732" />

    <SolidColorBrush x:Key="CancelButtonBackground" Color="#a60707" />
    <SolidColorBrush x:Key="CancelButtonForeground" Color="White" />
    <SolidColorBrush x:Key="CancelButtonBackgroundPointerOver" Color="#960808" />

    <SolidColorBrush x:Key="BlueButtonBackground" Color="#6e98f5" />
    <SolidColorBrush x:Key="BlueButtonForeground" Color="White" />
    <SolidColorBrush x:Key="BlueButtonBackgroundPointerOver" Color="#5183f0" />

    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="White" />
	<SolidColorBrush x:Key="ComboBoxForegroundPointerOver" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="White" />
	<SolidColorBrush x:Key="ComboBoxForegroundPressed" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxBackgroundReleased" Color="White" />
	<SolidColorBrush x:Key="ComboBoxForegroundReleased" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxDropDownBackground" Color="White" />
	<SolidColorBrush x:Key="ComboBoxDropDownForeground" Color="Black" />

	<SolidColorBrush x:Key="ComboBoxItemBackgroundPointerOver" Color="#c7c7c7" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundPointerOver" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemBackgroundPressed" Color="#c7c7c7" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundPressed" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemBackgroundReleased" Color="White" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundReleased" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemBackground" Color="White" />
	<SolidColorBrush x:Key="ComboBoxItemForeground" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundSelected" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundSelectedPointerOver" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemForegroundSelectedPressed" Color="Black" />
	<SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPointerOver" Color="#c7c7c7" />
	<SolidColorBrush x:Key="ComboBoxItemBackgroundSelectedPressed" Color="#c7c7c7" />

	<SolidColorBrush x:Key="ContentDialogBackground" Color="White" />
	<SolidColorBrush x:Key="ContentDialogForeground" Color="Black" />
    
    <SolidColorBrush x:Key="PrimaryButtonBackground" Color="#35772C" />
    <SolidColorBrush x:Key="PrimaryButtonForeground" Color="White" />
    <SolidColorBrush x:Key="PrimaryButtonBackgroundPointerOver" Color="#3c8732" />
    <Thickness x:Key="PrimaryButtonThickness">1</Thickness>
    
    <SolidColorBrush x:Key="SecondaryButtonBackground" Color="#a60707" />
    <SolidColorBrush x:Key="SecondaryButtonForeground" Color="White" />
    <SolidColorBrush x:Key="SecondaryButtonBackgroundPointerOver" Color="#960808" />
    <Thickness x:Key="SecondaryButtonThickness">1</Thickness>
    
    <SolidColorBrush x:Key="DialogTextBoxBackground" Color="White" />
    <Thickness x:Key="DialogTextBoxThickness">1</Thickness>
    <SolidColorBrush x:Key="DialogTextBoxBorderBrush" Color="#6e98f5" />
    <SolidColorBrush x:Key="DialogTextBoxForeground" Color="Black" />
    <CornerRadius x:Key="DialogCornerRadius">4</CornerRadius>

    <SolidColorBrush x:Key="alertText" Color="#a60707" />

    <Style x:Key="LoginButtonsStyle" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="20,5,20,7" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="MaxWidth" Value="300" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</ResourceDictionary>
